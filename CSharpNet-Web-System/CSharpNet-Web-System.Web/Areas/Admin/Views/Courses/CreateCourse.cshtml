@using CSharpNet_Web_System.Web.Areas.Admin.Models.Course
@model CourseFormModel

<div class="card mb-3">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="/assets//images/csharp_basics.png" class="img-fluid rounded-start" alt="...">
        </div>
        <div class="col-md-8" style="background-image: radial-gradient(circle farthest-corner at center, #3C4B57 0%, #1C262B 100%">
            <div class="card-body text-white">
                <h5 class="card-title">Създай курс</h5>
                <p class="card-text">В тази секция можеш да създадеш курс, който след това ще даде нови знания на твоите последователи.</p>
            </div>
        </div>
    </div>
</div>

<form method="post" enctype="multipart/form-data">

    <div class="mb-3">
        <label asp-for="Name" class="form-label text-white">Име</label>
        <input asp-for="Name" class="form-control text-white" placeholder="" style="background-image: radial-gradient(circle farthest-corner at center, #3C4B57 0%, #1C262B 100%">
        <span asp-validation-for="Name" class="small text-warning"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label text-white">Описание</label>
        <textarea rows="20" asp-for="Description" class="form-control text-white" style="background-image: radial-gradient(circle farthest-corner at center, #3C4B57 0%, #1C262B 100%"></textarea>
        <span asp-validation-for="Description" class="small text-warning"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PictureFile" class="form-label text-white">Снимка аватар</label>
        <input asp-for="PictureFile" type="file" name="PictureFile" class="form-control text-white" style="background-image: radial-gradient(circle farthest-corner at center, #3C4B57 0%, #1C262B 100%">
        <span asp-validation-for="PictureFile" class="small text-warning"></span>
    </div>

    <button type="submit" class="btn btn-primary">Потвърди</button>
</form>