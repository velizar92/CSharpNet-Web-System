@model List<IssueAdminViewModel>

@{
    int lineIndex = 1;
}

<table class="table text-white">
    <thead class="thead-light">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Заглавие</th>                            
            <th scope="col">Описание на проблема</th>
            <th scope="col">Опции</th>
            <th scope="col">Статус</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var issue in Model)
        {
            <tr>
                <th scope="row">@lineIndex</th>
                <td>@issue.Title</td>                             
                <td>@issue.Description</td>                             
                <td>                  
                    <a asp-area="Admin" asp-controller="Issues" asp-action="FixIssue" asp-route-issueId="@issue.Id" class="btn btn-success">Поправи</a>                  
                </td>
                @if(issue.Status.ToString() == "Pending")
                {
                    <td>Изчакващ</td>
                }
                else
                {
                    <td>Оправен</td>   
                }                  
            </tr>

            lineIndex++;
        }

    </tbody>
</table>
