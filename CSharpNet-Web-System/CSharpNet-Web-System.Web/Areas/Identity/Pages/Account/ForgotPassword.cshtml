@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Забравена парола?";
}

<h1 class="text-white">@ViewData["Title"]</h1>
<h2 class="text-white">Въведете вашия имейл.</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-warning"></span>
            </div>         
            <button type="submit" class="w-100 btn btn-lg text-white regLogSpaceUp" style="background-color: #AF1C70;">Нулиране на парола</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
