@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрирай се";
}

<h1 class="text-white">@ViewData["Title"]</h1>

<div class="login-register-container">
    <div class="form login">
        <span class="title">Register</span>

        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="input-field">
                <input asp-for="Input.FirstName" class="form-control" autocomplete="firstname" aria-required="true" placeholder="Enter your first name" required />
            </div>
            <span asp-validation-for="Input.FirstName" class="text-danger"></span>

            <div class="input-field">
                <input asp-for="Input.LastName" class="form-control" autocomplete="lastname" aria-required="true" placeholder="Enter your last name" required />
            </div>
            <span asp-validation-for="Input.LastName" class="text-danger"></span>

            <div class="input-field">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Enter your username" required />
            </div>
            <span asp-validation-for="Input.Email" class="text-danger"></span>

            <div class="input-field">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Enter your password" required />
            </div>
            <span asp-validation-for="Input.Password" class="text-danger"></span>

            <div class="input-field">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Enter your password" required />
            </div>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

            <div class="profile-image-option">
                <input asp-for="Input.ProfileImageUrl" type="file" name="file" class="form-control">
            </div>

            <div class="input-field button">
                <input type="submit" value="Register">
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
