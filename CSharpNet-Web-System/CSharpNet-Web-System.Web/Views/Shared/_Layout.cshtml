@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - C# Learning System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CSharpNet_Web_System.Web.styles.css" asp-append-version="true" />
</head>
<body style="background-color: #223463">
    <header>

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3" style="background-color: #672079">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="/assets//images//logos/index.png" alt="" width="30" height="24" class="d-inline-block align-text-top">
                    C# Learning System
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1">
                        @if (!SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Начало</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="About">За мен</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Contact">Контакти</a>
                            </li>
                        }

                        @if (SignInManager.IsSignedIn(User))
                        {
                            if (User.IsInRole(AdminRole))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-white" data-bs-toggle="dropdown">Курсове</a>
                                    <ul class="dropdown-menu" style="background-color: #672079">
                                        <li><a class="dropdown-item text-white" asp-area="Admin" asp-controller="Courses" asp-action="CreateCourse">Създай курс</a></li>
                                        <li><a class="dropdown-item text-white" asp-area="Admin" asp-controller="Courses" asp-action="AllCourses">Всички курсове</a></li>
                                    </ul>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-white" data-bs-toggle="dropdown">Потребители</a>
                                    <ul class="dropdown-menu" style="background-color: #672079">
                                        <li><a class="dropdown-item text-white" asp-area="Admin" asp-controller="Users" asp-action="CreateUser">Създай потребител</a></li>
                                        <li><a class="dropdown-item text-white" asp-area="Admin" asp-controller="Users" asp-action="AllUsers">Всички потребители</a></li>
                                    </ul>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="Admin" asp-controller="Issues" asp-action="MyIssues">Докладвани проблеми</a>
                                </li>
                            }
                            if (User.IsInRole(LearnerRole))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Начало</a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-white" data-bs-toggle="dropdown" asp-controller="Courses" asp-action="AllCourses">Курсове</a>
                                    <ul class="dropdown-menu" style="background-color: #672079">
                                        <li><a class="dropdown-item text-white" asp-area="" asp-controller="Courses" asp-action="Details" asp-route-courseId="1">C# Basics</a></li>
                                        <li><a class="dropdown-item text-white" asp-area="" asp-controller="Courses" asp-action="Details" asp-route-courseId="2">C# Fundamentals</a></li>
                                        <li><a class="dropdown-item text-white" asp-area="" asp-controller="Courses" asp-action="Details" asp-route-courseId="3">C# Advanced</a></li>
                                        <li><a class="dropdown-item text-white" asp-area="" asp-controller="Courses" asp-action="Details" asp-route-courseId="4">C# OOP</a></li>
                                    </ul>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Contact">Контакти</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="About">За мен</a>
                                </li>
                            }
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">

            <div class="loader">
                <div class="inner one"></div>
                <div class="inner two"></div>
                <div class="inner three"></div>
            </div>

            @RenderBody()
        </main>
    </div>

    <footer class="text-center text-white fixed-bottom">
        <div class="container">
            <div class="text-center p-3" style="background-color: #672079">
                &copy; 2022 - C# Learning System
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
